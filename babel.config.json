{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "current"
                }
            }
        ],
        "@babel/preset-typescript"
    ],
    "plugins": [
        "babel-plugin-transform-typescript-metadata"
    ],
    "ignore": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.types.ts"
    ]
}